class Solution {
public:
    int maximumProduct(vector<int>& nums) {
        // Sort the array
        sort(nums.begin(), nums.end());
        int n = nums.size();
        int o1 = nums[n-1] * nums[n-2] * nums[n-3];
        int optio2on2 = nums[0] * nums[1] * nums[n-1];
        
        return max(o1, o2);
    }
};
